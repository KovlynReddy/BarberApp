
<div id="map" style="width:100%;height:400px;"></div>


<script type="text/javascript">
    // Locations: [title, lat, long, number]
    var locations = [
        ['Bar Termini', -29.776807, 30.924297, 1],
        ['French House', -29.786807, 30.934297, 2],
        ['Mark\'s Bar', -29.796807, 30.944297, 3],
        ['Hakkasan (bar)', -29.856807, 30.954297, 4],
        ['Milk & Honey', -29.866807, 30.964297, 7],
        ['Blind Pig', -29.876807, 30.974297, 8],
        ['Opium', -29.886807, 30.994297, 9]
    ];

    var gmarkers = [];
    // Map Settings
    var map = new google.maps.Map(document.getElementById("map"), {
        zoom: 16,
        center: new google.maps.LatLng(-29.766807, 30.984297),
        mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    var infowindow = new google.maps.InfoWindow;

    var marker, i;
    for (i = 0; i < locations.length; i++) {
        marker = new google.maps.Marker({
            position: new google.maps.LatLng(locations[i][1], locations[i][2]),
            map: map,
            label: String(locations[i][3])
        });
        gmarkers.push(marker);
        google.maps.event.addListener(marker, 'click', (function (marker, i) {
            return function () {
                infowindow.setContent(locations[i][0]);
                infowindow.open(map, marker);
            }
        })(marker, i));
    }
    $('#list li').each(function (i, e) {
        $(e).click(function (i) {
            return function (e) {
                google.maps.event.trigger(gmarkers[i], 'click');
            }
        }(i));
    });

</script>

